@model Employee
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    ViewData["Title"] = "Edit Employee";
}

<style>
    /* Main Card Container */
    .form-card-container {
        max-width: 700px;
        margin: 40px auto;
    }

    .custom-form-card {
        background: #ffffff;
        border-radius: 12px;
        border: 1px solid #e0e0e0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    /* Header Section */
    .form-header {
        background: #ffffff;
        padding: 25px 30px;
        border-bottom: 1px solid #f1f1f1;
    }

    .form-header h4 {
        color: #1a237e; /* Navy Blue */
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .form-header h4 i {
        color: #d32f2f; /* Nexus Red */
    }

    /* Form Body */
    .form-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 22px;
    }

    .form-label {
        color: #5f6368;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 8px;
        display: block;
    }

    /* Input Styling */
    .form-control {
        border: 1px solid #ced4da;
        border-radius: 6px;
        padding: 12px 15px;
        font-size: 0.95rem;
        transition: all 0.2s ease-in-out;
        background-color: #fdfdfd;
        width: 100%;
    }

    .form-control:focus {
        border-color: #d32f2f;
        box-shadow: 0 0 0 3px rgba(211, 47, 47, 0.1);
        background-color: #fff;
        outline: none;
    }

    /* Info Box */
    .info-alert {
        background-color: #fff8e1;
        border-left: 4px solid #ffb300;
        color: #856404;
        padding: 12px 15px;
        margin-bottom: 25px;
        border-radius: 4px;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* Update Button (Nexus Red Style) */
    .btn-update-advanced {
        background-color: #d32f2f;
        color: white;
        border: none;
        padding: 14px 30px;
        border-radius: 6px;
        font-weight: 600;
        width: 100%;
        font-size: 1rem;
        transition: all 0.3s ease;
        margin-top: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-update-advanced:hover {
        background-color: #b71c1c;
        cursor: pointer;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(183, 28, 28, 0.2);
    }

    .btn-update-advanced:active {
        transform: translateY(0);
    }
</style>

<div class="form-card-container">
    <div class="custom-form-card">
        <div class="form-header">
            <h4><i class="fa-solid fa-user-pen"></i> Edit Employee Profile</h4>
        </div>

        <div class="form-body">
            <div class="info-alert">
                <i class="fa-solid fa-triangle-exclamation"></i>
                <span>You are updating the professional details for <strong>@Model.Id</strong>.</span>
            </div>

            <form method="post">
                <input type="hidden" name="EmployeeId" value="@Model.EmployeeId" />
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group">
                    <label class="form-label">Professional Designation</label>
                    <input name="Designation" value="@Model.Designation" class="form-control" placeholder="e.g. Sales Manager" required />
                </div>

                <div class="form-group">
                    <label class="form-label">Contact Number</label>
                    <input name="ContactNo" value="@Model.ContactNo" class="form-control" placeholder="+92 3XX XXXXXXX" required />
                </div>

                <button type="submit" class="btn-update-advanced">
                    <i class="fa-solid fa-arrows-rotate"></i> Update Employee
                </button>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a href="/Admin/Employees" class="text-muted text-decoration-none small">
            <i class="fa-solid fa-arrow-left"></i> Discard Changes & Back
        </a>
    </div>
</div>