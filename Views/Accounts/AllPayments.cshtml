@model IEnumerable<Nexus_Service_Marketing.Models.Payment>
@{
    Layout = "~/Views/Shared/_Accounts_Layout.cshtml";
    ViewData["Title"] = "Transaction History";
}

<div class="container-fluid py-4">
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
            <h4 class="fw-bold m-0 text-primary"><i class="fa-solid fa-money-bill-transfer me-2"></i>Payment Transactions</h4>
            <button class="btn btn-outline-primary btn-sm rounded-pill px-3" onclick="window.print()">
                <i class="fa-solid fa-print me-1"></i> Print Log
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Transaction ID</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Method</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td class="ps-4"><span class="fw-bold text-muted small">@p.TransactionNo</span></td>
                                <td>@p.PaymentDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <div class="fw-bold">@p.Bill.Order.Customer.FullName</div>
                                    <div class="x-small text-muted">Bill #@p.BillId</div>
                                </td>
                                <td class="fw-bold text-success">Rs. @p.PaidAmount</td>
                                <td><span class="badge bg-secondary opacity-75">@p.PaymentMethod</span></td>
                                <td>
                                    @if(p.Status == "Verified") {
                                        <span class="badge bg-success-subtle text-success border border-success px-3 rounded-pill">Verified</span>
                                    } else {
                                        <span class="badge bg-warning-subtle text-warning border border-warning px-3 rounded-pill">@p.Status</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="BillDetails" asp-route-id="@p.BillId" class="btn btn-light btn-sm rounded-circle"><i class="fa-solid fa-eye text-primary"></i></a>
                                    <a asp-action="Verify" asp-route-id="@p.PaymentId" class="btn btn-light btn-sm rounded-circle @(p.Status == "Verified" ? "disabled" : "")"><i class="fa-solid fa-check text-success"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>