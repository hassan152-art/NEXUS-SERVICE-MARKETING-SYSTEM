@{ Layout = "~/Views/Shared/_Accounts_Layout.cshtml"; }
@model IEnumerable<Order>

<div class="card border-0 shadow-sm p-4" style="border-radius: 20px;">
    <h3 class="fw-bold mb-4 text-success"><i class="fa-solid fa-clipboard-check me-2"></i>Approved Orders</h3>
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Plan Details</th>
                    <th>Current Status</th>
                    <th class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model) {
                    <tr>
                        <td class="fw-bold text-muted">#@o.OrderId</td>
                        <td>@o.Customer.FullName</td>
                        <td><span class="badge bg-info text-dark">@o.Plan.PlanName</span></td>
                        <td><span class="badge bg-warning">Pending Bill</span></td>
                        <td class="text-end">
                            <a asp-action="CreateBill" asp-route-orderId="@o.OrderId" class="btn btn-success btn-sm px-3 rounded-pill">
                                <i class="fa-solid fa-plus me-1"></i> Generate Bill
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>