@model Bill
@{
    Layout = "~/Views/Shared/_Accounts_Layout.cshtml";
}

<style>
    .details-container {
        max-width: 1100px;
        margin: 20px auto;
    }

    /* Top Action Bar */
    .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    /* Main Card Styling */
    .invoice-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        border: 1px solid #e2e8f0;
        overflow: hidden;
    }

    .card-top-accent {
        height: 6px;
        background: linear-gradient(90deg, #1d976c, #11998e);
    }

    .bill-meta-header {
        padding: 30px;
        background: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
    }

    /* Status Badges */
    .status-pill {
        padding: 8px 20px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
    }

    .pill-paid {
        background: #dcfce7;
        color: #15803d;
    }

    .pill-unpaid {
        background: #fee2e2;
        color: #b91c1c;
    }

    /* Info Grids */
    .info-section {
        padding: 30px;
    }

    .label-muted {
        color: #64748b;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 5px;
        display: block;
    }

    .value-bold {
        font-weight: 700;
        color: #1e293b;
        font-size: 1.05rem;
    }

    /* Pricing Table Table Custom */
    .pricing-box {
        background: #ffffff;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        overflow: hidden;
    }

    .pricing-row {
        display: flex;
        justify-content: space-between;
        padding: 15px 20px;
        border-bottom: 1px solid #f1f5f9;
    }

        .pricing-row:last-child {
            border-bottom: none;
            background: #f8fafc;
        }

    .total-amount-highlight {
        font-size: 1.5rem;
        color: #1d976c;
        font-weight: 800;
    }

    /* Sidebar Buttons */
    .btn-side {
        width: 100%;
        margin-bottom: 10px;
        padding: 12px;
        border-radius: 10px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: 0.3s;
    }
</style>

<div class="details-container">

    <div class="action-bar">
        <div>
            <a asp-action="BillView" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                <i class="fa-solid fa-arrow-left"></i> Back to Ledger
            </a>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Invoice" asp-route-id="@Model.BillId" target="_blank" class="btn btn-dark btn-sm rounded-pill px-3">
                <i class="fa-solid fa-print"></i> Print Invoice
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="invoice-card h-100">
                <div class="card-top-accent"></div>

                <div class="bill-meta-header d-flex justify-content-between align-items-center">
                    <div>
                        <span class="label-muted">Invoice Number</span>
                        <h4 class="fw-bold mb-0 text-primary">#INV-@Model.BillId</h4>
                    </div>
                    <div class="text-end">
                        <span class="status-pill @(Model.IsPaid ? "pill-paid" : "pill-unpaid")">
                            <i class="fa-solid @(Model.IsPaid ? "fa-check-circle" : "fa-clock") me-1"></i>
                            @(Model.IsPaid ? "Fully Paid" : "Pending Payment")
                        </span>
                    </div>
                </div>

                <div class="info-section">
                    <div class="row mb-5">
                        <div class="col-md-6 mb-4">
                            <span class="label-muted">Customer Details</span>
                            <div class="d-flex align-items-center">
                                <div class="bg-success text-white rounded-circle p-2 me-3" style="width:40px; height:40px; display:flex; align-items:center; justify-content:center;">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                                <div>
                                    <div class="value-bold">@Model.Order.Customer.FullName</div>
                                    <small class="text-muted">Order ID: #@Model.OrderId</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-4">
                            <span class="label-muted">Billing Date</span>
                            <div class="value-bold">@Model.BillDate.ToString("dd MMM, yyyy")</div>
                        </div>
                        <div class="col-md-3 mb-4">
                            <span class="label-muted">Due Date</span>
                            <div class="value-bold text-danger">@Model.DueDate.ToString("dd MMM, yyyy")</div>
                        </div>
                    </div>

                    <h6 class="fw-bold mb-3 text-uppercase small" style="letter-spacing:1px;">Financial Breakdown</h6>
                    <div class="pricing-box">
                        <div class="pricing-row">
                            <span class="text-muted">Base Plan Amount</span>
                            <span class="fw-bold">Rs. @Model.PlanAmount.ToString("N2")</span>
                        </div>
                        <div class="pricing-row">
                            <span class="text-muted">Discount Applied</span>
                            <span class="text-danger fw-bold">- Rs. @Model.DiscountAmount.ToString("N2")</span>
                        </div>
                        <div class="pricing-row">
                            <span class="text-muted">Tax (@Model.TaxPercentage%)</span>
                            <span class="fw-bold">Rs. @Model.TaxAmount.ToString("N2")</span>
                        </div>
                        <div class="pricing-row">
                            <span class="h5 fw-bold mb-0">Net Amount</span>
                            <span class="total-amount-highlight">Rs. @Model.Amount.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="invoice-card p-4">
                <h6 class="fw-bold mb-4 border-bottom pb-2">Quick Management</h6>

                @if (!Model.IsPaid)
                {
                    <a asp-controller="Accounts" asp-action="PayPayement" asp-route-billId="@Model.BillId"
                       class="btn btn-side btn-success shadow-sm">
                        <i class="fa-solid fa-plus-circle"></i> Add Payment
                    </a>
                }

                <a asp-controller="Accounts" asp-action="BillPayment" asp-route-billId="@Model.BillId"
                   class="btn btn-side btn-info text-white shadow-sm">
                    <i class="fa-solid fa-history"></i> Payment History
                </a>

                <div class="mt-4 p-3 rounded-4 bg-light border">
                    <small class="text-muted d-block mb-2">Need help?</small>
                    <p class="small mb-0">If there is any discrepancy in the bill amount, please contact the audit department.</p>
                </div>
            </div>
        </div>
    </div>
</div>