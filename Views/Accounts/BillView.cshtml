@{
    Layout = "~/Views/Shared/_Accounts_Layout.cshtml";
}
@model IEnumerable<Nexus_Service_Marketing.Models.Bill>

    <style>
        /* Advanced Dashboard Styling */
        .bill-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
            border: 1px solid #f1f5f9;
            overflow: hidden;
        }

        .bill-header {
            background: white;
            padding: 25px;
            border-bottom: 1px solid #f1f5f9;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        /* Status Badge Styling */
        .status-badge {
            padding: 6px 14px;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .badge-paid {
            background: #dcfce7;
            color: #15803d;
        }

        .badge-unpaid {
            background: #fee2e2;
            color: #b91c1c;
        }

        /* Table Enhancements */
        .custom-table {
            margin-bottom: 0;
        }

            .custom-table thead th {
                background: #f8fafc;
                padding: 18px 25px;
                color: #64748b;
                font-weight: 600;
                font-size: 0.85rem;
                border: none;
            }

            .custom-table tbody td {
                padding: 18px 25px;
                vertical-align: middle;
                border-bottom: 1px solid #f1f5f9;
                color: #334155;
            }

            .custom-table tbody tr:hover {
                background-color: #f8fafc;
                transition: 0.2s ease;
            }

        /* Action Buttons Styling */
        .action-group {
            display: flex;
            gap: 8px;
        }

        .btn-action {
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            transition: 0.3s;
            border: none;
        }

        .btn-view {
            background: #eff6ff;
            color: #2563eb;
        }

        .btn-edit {
            background: #fef9c3;
            color: #854d0e;
        }

        .btn-delete {
            background: #fff1f2;
            color: #e11d48;
        }

        .btn-action:hover {
            transform: translateY(-3px);
            filter: brightness(0.95);
        }

        .amount-text {
            font-weight: 700;
            color: #1e293b;
        }
    </style>

    <div class="container-fluid py-4">
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="p-3 bg-white rounded-4 shadow-sm border-start border-4 border-success">
                    <small class="text-muted d-block">Total Bills</small>
                    <h4 class="fw-bold mb-0">@Model.Count()</h4>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-3 bg-white rounded-4 shadow-sm border-start border-4 border-warning">
                    <small class="text-muted d-block">Pending Collection</small>
                    <h4 class="fw-bold mb-0">@Model.Count(x => !x.IsPaid)</h4>
                </div>
            </div>
        </div>

        <div class="bill-card">
            <div class="bill-header">
                <div>
                    <h4 class="mb-1 fw-bold text-dark">🧾 Billing Ledger</h4>
                    <p class="mb-0 text-muted small">Manage all customer invoices and payment statuses</p>
                </div>
                <div class="d-flex gap-2">
                    <div class="input-group input-group-sm" style="width: 250px;">
                        <span class="input-group-text bg-light border-0"><i class="fa fa-search text-muted"></i></span>
                        <input type="text" id="billSearch" class="form-control bg-light border-0" placeholder="Search invoices...">
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table custom-table" id="billsTable">
                    <thead>
                        <tr>
                            <th># Bill ID</th>
                            <th>Client Details</th>
                            <th>Amount</th>
                            <th>Billing Date</th>
                            <th>Payment Status</th>
                            <th class="text-center">Quick Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model)
                        {
                            <tr>
                                <td class="fw-bold text-primary">#@b.BillId</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-2 me-3 text-success">
                                            <i class="fa-solid fa-user-tie"></i>
                                        </div>
                                        <div>
                                            <span class="d-block fw-bold">@b.Order.Customer.FullName</span>
                                            <small class="text-muted">Order ID: @b.OrderId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="amount-text">Rs. @b.Amount.ToString("N0")</span>
                                </td>
                                <td>
                                    <div class="text-dark">@b.BillDate.ToString("dd MMM, yyyy")</div>
                                </td>
                                <td>
                                    @if (b.IsPaid)
                                    {
                                        <span class="status-badge badge-paid">
                                            <i class="fa-solid fa-circle-check"></i> Paid
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge badge-unpaid">
                                            <i class="fa-solid fa-clock"></i> Unpaid
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="action-group justify-content-center">
                                        <a asp-action="BillDetails" asp-route-id="@b.BillId"
                                           class="btn-action btn-view" title="View Details">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        <a asp-action="EditBill" asp-route-id="@b.BillId"
                                           class="btn-action btn-edit" title="Edit Bill">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a asp-action="DeleteBill" asp-route-id="@b.BillId"
                                           class="btn-action btn-delete" title="Delete Bill">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
        // Simple search functionality
        document.getElementById('billSearch').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll('#billsTable tbody tr');

            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        });
        </script>
    }
