@model User

@{
    ViewData["Title"] = "Register";
}

<div style="min-height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 130px 15px; background: #f8f9fa;">

    ```
    <div style="margin-bottom: 30px; text-align: center;">
        <h1 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 800; margin: 0; font-size: 3rem; color: #1a237e;">
            NEXUSE<span style="color: #d32f2f;">.net</span>
        </h1>
        <p style="color: #666; margin-top: 5px; font-weight: 500; letter-spacing: 1px;">SERVICE MARKETING SYSTEM</p>
    </div>

    <div style="width: 100%; max-width: 500px;">
        <div style="background: white; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); overflow: hidden; border: 1px solid #e0e0e0;">

            <div style="background: #d32f2f; padding: 25px; text-align: center;">
                <h3 style="color: white; margin: 0; font-size: 22px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">
                    User Registration
                </h3>
            </div>

            <div style="padding: 40px;">
                <form asp-action="Register" method="post">

                    <!-- Name -->
                    <div style="margin-bottom: 20px;">
                        <label asp-for="Name" style="display:block;margin-bottom:8px;font-weight:600;font-size:0.85rem;">Full Name</label>
                        <input asp-for="Name"
                               type="text"
                               placeholder="Enter your name"
                               required
                               pattern="^[A-Za-z\s]+$"
                               title="Only letters allowed"
                               onkeypress="return /^[A-Za-z\s]$/.test(event.key)"
                               style="width:100%;padding:12px 15px;border:1px solid #dcdcdc;border-radius:8px;" />
                        <span asp-validation-for="Name" style="color:red;font-size:12px;"></span>
                    </div>

                    <!-- Email -->
                    <div style="margin-bottom: 20px;">
                        <label asp-for="Email" style="display:block;margin-bottom:8px;font-weight:600;font-size:0.85rem;">Email</label>
                        <input asp-for="Email"
                               type="email"
                               placeholder="example@nexus.net"
                               required
                               style="width:100%;padding:12px 15px;border:1px solid #dcdcdc;border-radius:8px;" />
                        <span asp-validation-for="Email" style="color:red;font-size:12px;"></span>
                    </div>

                    <!-- DOB & Gender -->
                    <div style="display:flex;gap:20px;margin-bottom:20px;">
                        <div style="flex:1;">
                            <label style="display:block;margin-bottom:8px;font-weight:600;font-size:0.85rem;">Date of Birth</label>
                            <input type="date"
                                   name="DateOfBirth"
                                   required
                                   max="@DateTime.Now.ToString("yyyy-MM-dd")"
                                   style="width:100%;padding:11px 15px;border:1px solid #dcdcdc;border-radius:8px;" />
                        </div>

                        <div style="flex:1;">
                            <label style="display:block;margin-bottom:8px;font-weight:600;font-size:0.85rem;">Gender</label>
                            <select name="Gender" required
                                    style="width:100%;padding:12px 15px;border:1px solid #dcdcdc;border-radius:8px;">
                                <option value="">Select</option>
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>
                        </div>
                    </div>

                    <!-- Password -->
                    <div style="margin-bottom: 30px;">
                        <label asp-for="Password" style="display:block;margin-bottom:8px;font-weight:600;font-size:0.85rem;">Password</label>
                        <input asp-for="Password"
                               type="password"
                               minlength="8"
                               required
                               pattern="^(?=.*\d).{8,}$"
                               title="Minimum 8 characters with at least 1 number"
                               placeholder="••••••••"
                               style="width:100%;padding:12px 15px;border:1px solid #dcdcdc;border-radius:8px;" />
                        <span asp-validation-for="Password" style="color:red;font-size:12px;"></span>
                    </div>

                    <input type="hidden" name="Role" value="User" />

                    <!-- Submit -->
                    <button type="submit"
                            style="width:100%;padding:14px;background:#d32f2f;color:white;border:none;border-radius:8px;font-size:16px;font-weight:700;">
                        Create Account
                    </button>
                </form>

                <div style="text-align:center;margin-top:25px;">
                    <span>Already have an account?</span>
                    <a asp-action="Login" asp-controller="Home">Login here</a>
                </div>
            </div>
        </div>
    </div>
    ```

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
