@{
    ViewData["Title"] = "Search Order/Connection";
}

<div style="min-height: 80vh; padding: 130px 15px; background-color: #f4f7f6; font-family: 'Segoe UI', Tahoma, sans-serif;">

    <div style="max-width: 650px; margin: 0 auto;">

        <div style="text-align: center; margin-bottom: 35px;">
            <div style="display: inline-block; background: #1a237e; color: white; padding: 10px 20px; border-radius: 50px; font-size: 12px; font-weight: 700; text-transform: uppercase; margin-bottom: 15px; letter-spacing: 1px;">
                Service Tracker
            </div>
            <h2 style="color: #1a237e; font-weight: 800; margin: 0; font-size: 32px;">Search Your <span style="color: #d32f2f;">Connection</span></h2>
            <p style="color: #666; margin-top: 10px;">Enter your unique Order Code or Account ID to view current status.</p>
        </div>

        @if (ViewBag.LatestOrder != null)
        {
            <div style="background: white; border-left: 5px solid #1a237e; padding: 20px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.05); margin-bottom: 25px; display: flex; align-items: center; justify-content: space-between;">
                <div>
                    <span style="display: block; font-size: 12px; color: #999; text-transform: uppercase; font-weight: 700;">Your Recent Order</span>
                    <span style="font-size: 16px; color: #1a237e; font-weight: 700;">Code: @ViewBag.LatestOrder.OrderCode</span>
                </div>
                <div style="text-align: right; border-left: 1px solid #eee; padding-left: 20px;">
                    <span style="display: block; font-size: 12px; color: #999; text-transform: uppercase; font-weight: 700;">Account ID</span>
                    <span style="font-size: 16px; color: #333; font-weight: 700;">@ViewBag.LatestOrder.AccountId</span>
                </div>
            </div>
        }

        <div style="background: white; padding: 35px; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.08); border: 1px solid #e0e0e0;">
            <form asp-action="Search" method="post" style="display: flex; flex-direction: column; gap: 15px;">

                <div style="position: relative;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 700; color: #555; font-size: 13px; text-transform: uppercase;">Reference Number</label>
                    <input type="text" name="code" placeholder="e.g. ORD-12345 or ACC-987"
                           style="width: 100%; padding: 15px 20px; border: 2px solid #f0f0f0; border-radius: 10px; font-size: 16px; outline: none; transition: all 0.3s; box-sizing: border-box;"
                           onfocus="this.style.borderColor='#1a237e'; this.style.backgroundColor='#f9faff';"
                           onblur="this.style.borderColor='#f0f0f0'; this.style.backgroundColor='white';" />
                </div>

                <button type="submit"
                        style="width: 100%; padding: 16px; background: #d32f2f; color: white; border: none; border-radius: 10px; font-size: 16px; font-weight: 700; cursor: pointer; transition: all 0.3s; text-transform: uppercase; letter-spacing: 1px; margin-top: 5px;"
                        onmouseover="this.style.background='#b71c1c'; this.style.transform='translateY(-2px)';"
                        onmouseout="this.style.background='#d32f2f'; this.style.transform='translateY(0)';"
                        onmousedown="this.style.transform='translateY(1px)';">
                    Track Connection Status
                </button>
            </form>
        </div>

        @if (ViewBag.Error != null)
        {
            <div style="margin-top: 20px; background: #fff5f5; color: #c53030; padding: 15px; border-radius: 8px; border: 1px solid #feb2b2; display: flex; align-items: center; font-size: 14px; font-weight: 600;">
                <span style="margin-right: 10px; font-size: 18px;">⚠️</span> @ViewBag.Error
            </div>
        }

        <div style="text-align: center; margin-top: 30px; color: #999; font-size: 13px;">
            Forgot your ID? Check your registered email or <a href="#" style="color: #1a237e; text-decoration: none; font-weight: 700;">Contact Support</a>
        </div>

    </div>
</div>